{
  "$schema": "./appsettings.schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AppConfig": {
    "ConnectionString": "Data Source=../../DevData/home/Threax.Home.db;",
    "DetailedErrors": true,
    "AllowApiExplorer": true,
    "UseAssetBundles": false
  },
  "ClientConfig": {
    "ServiceUrl": "https://localhost:44357/api",
    "UserDirectoryUrl": "https://localhost:44392/"
  },
  "CertManager": {
    "LoadCerts": false
  },
  "LibCec": { "Enabled": true },
  "WinLirc": {
    "Enabled": true,
    "Devices": {
      "LG_TV": [ "Power" ],
      "Yamaha_LivingRoom_Reciever": [ "Power" ]
    }
  }
}
