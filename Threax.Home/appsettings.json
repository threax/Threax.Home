{
  "$schema": "./appsettings.schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AppConfig": {
    "ConnectionString": "Data Source=/appdata/Threax.Home.db;",
    "DetailedErrors": false,
    "AllowApiExplorer": true,
    "UseAssetBundles": true
  },
  "ClientConfig": {
    "ServiceUrl": "https://home.dev.threax.com/api"
  },
  "Cors": {
    "UnlimitedAccess": false
  },
  "JwtAuth": {
    "Authority": "https://id.dev.threax.com"
  },
  "ZWave": {
    "ComPort": "COM3",
    "Enabled": false
  },
  "ColorTouch": {
    "Enabled": false
  },
  "IdServerClient": {
    "ServiceUrl": "https://id.dev.threax.com/api",
    "ClientCredentials": {
      "Scope": "Threax.IdServer"
    }
  },
  "SharedClientCredentials": {
    "ClientId": "Threax.Home.ClientCreds",
    "ClientSecret": "notyetdefined",
    "IdServerHost": "https://id.dev.threax.com"
  }
}
